<div class="column is-half">
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64"><img src="https://bulma.io/images/placeholders/64x64.png" alt=""></p>
    </figure>
    <div class="media-content">
      <%= render 'twitters/form' %>
    </div>
  </article>
<% @twitters.each do |twitter| %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <img src="https://bulma.io/images/placeholders/64x64.png" alt="">
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong>Viva el Papo</strong>
          <small>Trucoteca.com</small>
          <p>
            <%= twitter.tweet %>
          </p>
        </div>
        <nav class="level">
          <div class="level-left is-mobile">
            <%= link_to twitter, class: "level-item" do %>
            <span class="icon">
              <i class="fa fa-link" aria-hidden="true"></i>
            </span>
          <% end %>

          <%= link_to edit_twitter_path(twitter), class: "level-item" do %>
          <span class="icon">
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </span>
        <% end %>
        <%= link_to twitter, method: :delete, data: { confirm: "Are you SERIOUS about deleting?"} do %>
        <span class="icon">
          <i class="fa fa-trash-o" aria-hidden="true"></i>
        </span>
      <% end %>
    </div>
  </nav>
</div>
</article>
</div>
</div>
<% end %>
